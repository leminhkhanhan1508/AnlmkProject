<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_nutrition_app"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/llFunction"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:layout_marginHorizontal="@dimen/dp20"
        android:layout_marginTop="@dimen/dp27"
        android:layout_marginBottom="@dimen/dp16"
        app:layout_constraintTop_toTopOf="parent">

        <com.anlmk.base.ui.views.Button
            android:id="@+id/btnAddInformation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp6"
            android:layout_weight="1"
            android:text="@string/add_new_information"
            android:background="@drawable/bg_cancel_button"
            android:textColor="@color/color_005d98"
            android:textAllCaps="false"
            android:textSize="@dimen/sp16"
            app:cusfont="Bold"
            tools:visibility="visible"
            />

        <com.anlmk.base.ui.views.Button
            android:id="@+id/btnExportFile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp6"
            android:layout_weight="1"
            android:text="@string/export_file"
            android:background="@drawable/bg_main_button"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16"
            app:cusfont="Bold"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_meal_of_date_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp100"
        android:clipToPadding="false"
        android:layout_marginHorizontal="@dimen/dp16"
        app:layout_constraintTop_toBottomOf="@+id/llFunction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>